
Screen:
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "Дезреестр"
            left_action_items: [["menu", lambda x: nav_draw.set_state()]]
            md_bg_color: '#b5b8b1'
        Widget:

    MDNavigationLayout:
        ScreenManager:
            id: screen_manager
            Screen:
                name: "scr1"
                ScrollView:
                    bar_width: 4
                    StackLayout:
                        padding: "50dp"
                        spacing: 3
                        size_hint_y: None
                        height: self.minimum_height
                        MDTextField:
                            id: type
                            hint_text: "Тип дезсредства"
                            helper_text: "Концентрат, антисептик, мыло и т.д. "
                            helper_text_mode: "on_focus"
                        MDTextField:
                            id: proizv
                            hint_text: "Производитель"
                            helper_text: "Наименование производителя"
                            helper_text_mode: "on_focus"
                            on_focus: if self.focus: app.menu.open()

                        MDTextField:
                            id: name
                            hint_text: "Наименование"
                            helper_text: "Наименование дезсредства"
                            helper_text_mode: "on_focus"
                        MDTextField:
                            id: structure
                            hint_text: "Состав"
                            helper_text: "Состав дезсредства"
                            helper_text_mode: "on_focus"
                            multiline: True
                        MDTextField:
                            id: used
                            hint_text: "Области применения"
                            helper_text: "Области применения"
                            helper_text_mode: "on_focus"
                            multiline: True
                        MDTextField:
                            id: expiration
                            hint_text: "Срок годности"
                            helper_text: "Срок годности, г."
                            helper_text_mode: "on_focus"
                            #on_focus: if self.focus: app.date_dialog.open()
                        MDTextField:
                            id: packing
                            hint_text: "Фасовка"
                            helper_text: "Фасовка в л. через запятую."
                            helper_text_mode: "on_focus"
                            #on_focus: if self.focus: app.date_dialog.open()
                        MDTextField:
                            id: comment
                            hint_text: "Комментарий"
                            helper_text: "Комментарий"
                            helper_text_mode: "on_focus"
                            multiline: True
                MDRoundFlatIconButton:
                    icon: "android"
                    text: "MDROUNDFLATICONBUTTON"
                    pos_hint: {"center_x": .5, "center_y": .02}
                MDLabel:
                    text: "v.1.0"
                    pos_hint: {"center_x": .99, "center_y": .1}
            Screen:
                name: "scr2"
                MDLabel:
                    text: "Dezreestr version 1.0"
                    halign: "center"

    MDNavigationDrawer:
        id: nav_draw
        orientation: "vertical"
        padding: "8dp"
        spacing: "8dp"

        AnchorLayout:
            anchor_x: "left"
            size_hint_y: None
            height: avatar.height
            Image:
                id: avatar
                size_hint: None, None
                size: "56dp", "56dp"
                source: "data/logo/kivy-icon-256.png"
#            MDLabel:
#                text: "Kaustubh Gupta"
#                font_style: "Button"
#                size_hint_y: None
#                height: self.texture_size[1]
#
#            MDLabel:
#                text: "youreamil@gmail.com"
#                font_style: "Caption"
#                size_hint_y: None
#                height: self.texture_size[1]

        ScrollView:
            MDList:
                OneLineAvatarListItem:
                    on_press:
                        root.func()
                        screen_manager.current = "scr1"
                        nav_draw.set_state('close')
                    text: "Добавить дезсредство"
                    IconLeftWidget:
                        icon: "notebook-plus"
                OneLineAvatarListItem:
                    on_press:
                        screen_manager.current = "scr2"
                        nav_draw.set_state('close')
                    text: "About"
                    IconLeftWidget:
                        icon: 'information'

        Widget: