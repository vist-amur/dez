<CommonLabel@MDLabel>
    opacity: 0
    adaptive_height: True
    halign: "center"
    y: -self.height

Screen:
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "Дезреестр"
            left_action_items: [["menu", lambda x: nav_draw.set_state()]]
            #md_bg_color: '#9e908b'
        Widget:

    MDNavigationLayout:
        ScreenManager:
            id: screen_manager
           # MDScreen:
            MDScreen:
                name: "scr1"
                BoxLayout:
                    size_hint_y: 0.91
                    #size_hint: (None, 0.2)
                    #height: 10
                    ScrollView:
                        do_scroll_x: True
                        do_scroll_y: True
                        StackLayout:
                            padding: "50dp"
                            spacing: 4
                            size_hint_y: None
                            height: self.minimum_height
                            MDTextField:
                                id: type
                                hint_text: "Тип дезсредства"
                                helper_text: "Концентрат, антисептик, мыло и т.д. "
                                helper_text_mode: "on_focus"
                                color_normal: 0, 1, 0, 1
                                on_focus: if self.focus: app.typedez.open()
                            MDTextField:
                                id: proizv
                                hint_text: "Производитель"
                                helper_text: "Наименование производителя"
                                helper_text_mode: "on_focus"
                                on_focus: if self.focus: app.menu.open()
                            MDTextField:
                                id: name
                                hint_text: "Наименование"
                                helper_text: "Наименование дезсредства"
                                helper_text_mode: "on_focus"
                            MDTextField:
                                id: structure
                                hint_text: "Состав"
                                helper_text: "Состав дезсредства"
                                helper_text_mode: "on_focus"
                                multiline: True
                            MDTextField:
                                id: used
                                hint_text: "Области применения"
                                helper_text: "Области применения"
                                helper_text_mode: "on_focus"
                                multiline: True
                            MDTextField:
                                id: expiration
                                hint_text: "Срок годности"
                                helper_text: "Срок годности, г."
                                helper_text_mode: "on_focus"
                                #on_focus: if self.focus: app.date_dialog.open()
                            MDTextField:
                                id: packing
                                hint_text: "Фасовка"
                                helper_text: "Фасовка в л. через запятую."
                                helper_text_mode: "on_focus"
                                #on_focus: if self.focus: app.date_dialog.open()
                            MDTextField:
                                id: comment
                                hint_text: "Комментарий"
                                helper_text: "Комментарий"
                                helper_text_mode: "on_focus"
                                multiline: True
                StackLayout:
                    orientation: "bt-rl"
                    padding: "10dp"
                    spacing: 4
                    #size_hint_x: None
                    #size_hint_y: 0.9
                    #height: 30
                    #pos_hint: {"center_x": 1.3, "center_y": .5}
                    MDFillRoundFlatIconButton:
                        icon: "android"
                        text: "Сохранить"
                        #pos_hint: {"center_x": .3, "center_y": .5}

                        on_release: app.rec_to_base()
#                    MDLabel:
#                        text: "A"
#                        size_hint: [.2, .1]


            MDScreen:
                name: "scr2"
                StackLayout:
                    orientation: "lr-tb"
                    #spacing: 4
                    #size_hint_y: None
                    #padding: "10dp"
                    #spacing: 4
                    #size_hint_x: 0.94
                    #size_hint_y: 1.0
#                    MDLabel:
#                        text: "Dezreestr version 1.0"
#                        halign: "center"
                    Image:
                        source: "mascot.png"
                StackLayout:
                    orientation: "lr-bt"
                    MDLabel:
                        text: "Dezreestr version 1.0"
                        halign: "center"
                        size_hint: [1.05, None]
            MDScreen:
                name: "scr3"
                on_enter: app.start_animation()
                on_leave: self.opacity = 0
                StackLayout:
                    padding: "100dp"
                    spacing: 4
                    #size_hint_y: None
                    height: self.minimum_height
                    CommonLabel:
                        id: lbl_1
                        font_size: "32sp"
                        text: "Настройки"
                    MDTextField:
                        id: token
                        hint_text: "Токен для доступа к API"
                        helper_text: "Токен для доступа к API. Для записи нажмите Ввод или совершите двойное касание"
                        helper_text_mode: "on_focus"
                        normal_color: '#3212342'
                        on_double_tap: app.set_token(self.text)
                        on_text_validate: app.set_token(self.text)



    MDNavigationDrawer:
        id: nav_draw
        orientation: "vertical"
        padding: "8dp"
        spacing: "8dp"

        AnchorLayout:
            anchor_x: "left"
            size_hint_y: None
            height: avatar.height
            Image:
                id: avatar
                size_hint: None, None
                size: "100dp", "100dp"
                source: "logo.png"
#            MDLabel:
#                text: "Kaustubh Gupta"
#                font_style: "Button"
#                size_hint_y: None
#                height: self.texture_size[1]
#
#            MDLabel:
#                text: "youreamil@gmail.com"
#                font_style: "Caption"
#                size_hint_y: None
#                height: self.texture_size[1]

        ScrollView:
            MDList:
                OneLineAvatarListItem:
                    on_press:
                       # root.func()
                        screen_manager.current = "scr1"
                        nav_draw.set_state('close')
                    text: "Добавить дезсредство"
                    IconLeftWidget:
                        icon: "notebook-plus"
                OneLineAvatarListItem:
                    on_press:
                       # root.func()
                        screen_manager.current = "scr3"
                        nav_draw.set_state('close')
                    text: "Настройки"
                    IconLeftWidget:
                        icon: "cog-outline"
                OneLineAvatarListItem:
                    on_press:
                        screen_manager.current = "scr2"
                        nav_draw.set_state('close')
                    text: "About"
                    IconLeftWidget:
                        icon: 'information'

        Widget: